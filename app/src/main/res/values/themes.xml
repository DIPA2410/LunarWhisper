<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LunarWhisper" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary" type="color">@color/light_skin</item>
        <item name="colorPrimaryDark" type="color">@color/skin</item>
        <item name="colorAccent" type="color">@color/black</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/light_skin</item>
        <item name="android:textColorPrimary">@color/dark_brown</item> <!-- Text color for title and message -->
        <item name="android:buttonBarButtonStyle">@style/CustomButtonBarButtonStyle</item>
    </style>

    <style name="CustomButtonBarButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/dark_brown</item>
    </style>

    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/light_peach</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@color/dark_brown</item>
    </style>
    
    <style name="ScreenBackground"><item name="android:background">@color/lightest_skin</item></style>
    <style name="CardBackground"><item name="android:backgroundTint">@color/light_peach</item></style>
    <style name="TextColor"><item name="android:textColor">@color/black</item></style>
    <style name="Text"><item name="android:textColor">@color/black</item></style>
    <style name="TextHint"><item name="android:hint">@color/dark_gray</item></style>
    <style name="BG"><item name="android:background">@drawable/bg</item></style>
    <style name="Color"><item name="android:background">@color/light_skin</item></style>
    <style name="RowName"><item name="android:textColor">@color/dark_brown</item></style>
    <style name="RowOthers"><item name="android:textColor">@color/black</item></style>
    <style name="RowBG"><item name="android:background">@drawable/row_bg2</item></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.LunarWhisper" parent="Base.Theme.LunarWhisper" />
</resources>