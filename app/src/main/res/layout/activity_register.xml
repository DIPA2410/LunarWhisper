<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightest_skin"
    tools:context=".ui.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_anchorGravity="center"
        app:layout_marginBaseline="10dp"
        tools:context=".ui.LoginActivity"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/gotoRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Create Account"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textColor="@color/dark_skin"
            android:textSize="40sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="127dp"
            android:layout_height="127dp"
            android:layout_margin="10dp"
            android:src="@drawable/img_4"
            app:civ_border_color="@color/dark_brown"
            app:civ_border_width="2dp"
            android:onClick="onProfileImageClick"/>

        <EditText
            android:id="@+id/regName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:height="50dp"
            android:textColorHint="@color/dark_gray"
            android:background="@drawable/edt_bg"
            android:hint=" Name..."
            style="@style/Text"
            android:fontFamily="monospace"
            android:padding="10dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/regEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:height="50dp"
            android:background="@drawable/edt_bg"
            android:hint=" Email..."
            style="@style/Text"
            android:textColorHint="@color/dark_gray"
            android:fontFamily="monospace"
            android:padding="10dp"
            android:textSize="18sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">


            <EditText
                android:id="@+id/regPassEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:height="55dp"
                android:background="@drawable/edt_bg"
                android:padding="10dp"
                android:hint=" Password..."
                android:fontFamily="monospace"
                android:textSize="18sp"
                style="@style/Text"
                android:textColorHint="@color/dark_gray"
                android:inputType="textPassword"
                android:layout_gravity="center_vertical"/>

            <ToggleButton
                android:id="@+id/regPassToggle"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/edt_bg"
                android:backgroundTint="@color/light_skin"
                android:paddingTop="3dp"
                style="@style/CustomButtonBarButtonStyle"
                android:paddingBottom="3dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textOff="Show"
                android:textOn="Hide" />

        </FrameLayout>

        <Button
            android:id="@+id/signupBtn"
            style="@style/CustomButtonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ellipsize="none"
            android:textAllCaps="false"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:text="Sign Up"
            android:background="@color/light_skin"
            android:textSize="20sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>